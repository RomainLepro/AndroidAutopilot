<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_pid"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="PID()"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_p"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:text="NAME"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_pid"
        app:layout_constraintTop_toTopOf="@+id/tv_pid" />

    <TextView
        android:id="@+id/tv_p_value"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:text="VALUE"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_p"
        app:layout_constraintTop_toTopOf="@+id/tv_p" />

    <TextView
        android:id="@+id/tv_p_result"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:text="RESULT"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_p_value"
        app:layout_constraintTop_toTopOf="@+id/tv_p_value" />

    <ListView
        android:id="@+id/simpleListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/material_blue_grey_800"
        android:dividerHeight="1dp"
        app:layout_constraintStart_toEndOf="@+id/tv_p_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_p_value" />

</androidx.constraintlayout.widget.ConstraintLayout>